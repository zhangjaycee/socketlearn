#!/bin/sh
TIME=$(date +%y-%m-%d-%H:%M)
touch $1
#LENGTH=length($1)
echo "/**************************************************************" 1>$1
echo "*******                                                 *******" 1>>$1
echo "***                                                         ***" 1>>$1
printf "**   Filename: %-20.20s   Time: %-15.15s  **\n" $1 $TIME 1>>$1
#printf "* Time:%-25.25s               *\n" $TIME 1>>$1
echo "**   Email:    zhjcyx@gmail.com       By: Jaycee             **" 1>>$1
echo '***                                                         ***' 1>>$1
echo '*******                                                 *******' 1>>$1
echo '**************************************************************/' 1>>$1
vim $1
